
    {{#if items.length}}
        <div class="mt-3">
            <h2>Vista de Productos Fake</h2>
            <div class="table-responsive">
                <table class="table table-dark table-striped">
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Foto URL</th>
                    </tr>
                    {{#each items}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>$ {{this.price}}</td>
                        <td><img width="50" src={{this.thumbnail}}></td>
                    </tr>
                    {{/each}}
                </table>
            </div>
        </div>
    {{/if}}

{{#if productos.length}}
{{#each productos}}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{thumbnail}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text text-primary">Precio: ${{price}}</p>
        <button class="btn btn-outline-danger btn-sm eliminar" data-id="{{_id}}">Eliminar</button>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>No hay productos en el carrito!</p>
{{/if}}